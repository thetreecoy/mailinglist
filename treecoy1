            <!-- Headline will be inserted by JavaScript -->
        </h1>
        <p id="dynamic-subtitle" class="text-lg text-gray-600 mb-8 sm:px-4">
            <!-- Subtitle will be inserted by JavaScript -->
        </p>

        <!-- Email Capture Form -->
        <form id="email-form" class="space-y-4" 
              action="https://script.google.com/macros/s/AKfycbzXlck179-JbE2HmWl7qf0fyESQtkfZwSYBdA1y9qRbrLQIyaOZUgQry6QWJPh1sEvk/exec" 
              method="POST"
              target="iframe-submit">
            
            <!-- HIDDEN FIELD TO CAPTURE HEADLINE FOR DATA ANALYTICS -->
            <input type="hidden" id="headline-saw" name="headline_saw" value="">

            <!-- CRUCIAL: Name must match the Google Sheet column header -->
            <input type="email" name="email" placeholder="Enter your email to unlock the secret..." 
                   class="w-full px-5 py-3 border border-gray-300 rounded-lg focus:ring-4 focus:ring-indigo-200 focus:border-indigo-400 text-gray-800" 
                   required>
            
