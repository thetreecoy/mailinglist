    <!-- Hidden iframe for submission workaround -->
    <iframe id="iframe-submit" name="iframe-submit" style="display:none;"></iframe>

    <script>
        // --- 1. Define the Decoy Variants (10 total) ---
        const allVariants = [
            // Variant 1: Ethical Hook (Refined for Poconos Pitch)
            {
                headline: "We're putting KIDS back in the factories! Find out HOW!",
                subtitle: "The future of American Manufacturingâ€”Starting RIGHT HERE in the Pocono Mountains! Find out HOW!"
            },
            // Variant 2: The Scandal (Smooch Breaks)
            {
                headline: "My husband was taking SMOOCH BREAKS at work!! ðŸ˜«",
                subtitle: "Get the info sent straight to your inbox and see what I heard from his employer!"
            },
            // Variant 3: The Financial Shock (Factory Build - Half a Million)
            {
                headline: "My husband spent HALF A MILLION DOLLARS on this",
                subtitle: "See the shocking expense my husband SERIOUSLY took on!"
            },
            // Variant 4: The Christmas Discovery (Timely)
            {
                headline: "Wanna find out what I found IN MY LIVING ROOM!? ON CHRISTMAS??",
                subtitle: "See the LIVING ROOM CAMERA FOOTAGE I used to discover the secret!"
            },
            // Variant 5: The Manufacturing Meta 
            {
                headline: "The kids yearn for the mines- and now the FACTORIES!",
                subtitle: "Find out what these 5 families have to say about it!"
            },
            // Variant 6: The Holiday Horror 
            {
                headline: "He took 'Secret Santa' to a whole new level",
                subtitle: "I don't know if I can look at another Christmas tree the same way ever again."
            },
            // Variant 7: The Tax Loophole 
            {
                headline: "SAVE $150- FOR REAL",
                subtitle: "Sign up for our mailing list RIGHT NOW for the deal of a lifetime! LIMITED OPPORTUNITY."
            },
            // Variant 8: The Parenting Drama 
            {
                headline: "THE WHEN: COMING 2027.",
                subtitle: "No joke, no fluff. Join the mailing list to find out the WHAT."
            },
            // Variant 9: The Labor Solution 
            {
                headline: "POCONO PEOPLE! What are you looking for in your place of work?",
                subtitle: "WE CARE! Join the mailing list and fill out a simple questionaire for a chance to WIN BIG"
            },
            // Variant 10: The Relatable Reality 
            {
                headline: "I'm a stay-at-home-mom- that's why I can't believe my husband HID THIS FROM ME",
                subtitle: "Join the email list to see the real footage when I release it."
            }
        ];


        // --- 2. Randomly Select, Display, and Load Hidden Field ---
        function loadDynamicContent() {
            const randomIndex = Math.floor(Math.random() * allVariants.length);
            const selectedVariant = allVariants[randomIndex];

            // Display content
            document.getElementById('dynamic-headline').innerText = selectedVariant.headline;
            document.getElementById('dynamic-subtitle').innerText = selectedVariant.subtitle;
            
            // Populate the hidden field (CRUCIAL for data capture)
            document.getElementById('headline-saw').value = selectedVariant.headline;
        }

        // --- 3. Handle Form Submission Success/Failure via Iframe Listener (FIX) ---
        document.getElementById('email-form').addEventListener('submit', function(e) {
            const statusDisplay = document.getElementById('success-message');
            const form = e.target;
            
            // Show processing message
            statusDisplay.classList.remove('hidden'); 
            statusDisplay.classList.remove('bg-red-100', 'text-red-700');
            statusDisplay.classList.add('bg-green-100', 'text-green-700');
            statusDisplay.innerText = "Processing submission...";

            // The iframe handles the actual submission. We listen for it to load.
            document.getElementById('iframe-submit').onload = function() {
                // If the iframe loads, the data was successfully received by the Google Script.
                
                // Hide the form and show the final success message
                form.classList.add('hidden');
                statusDisplay.innerText = "Success! Your email has been added to The Valdeandez Group! Prepare for the July 2026 reveal!";
            };
            
            // 5 second timeout for submission handlingâ€”a safety net for network issues
            setTimeout(() => {
                // If the form hasn't been hidden yet, assume submission failed or timed out
                if (form.classList.contains('hidden')) return; 
                
                statusDisplay.classList.remove('bg-green-100', 'text-green-700');
                statusDisplay.classList.add('bg-red-100', 'text-red-700');
                statusDisplay.innerText = "Error: Submission timed out or failed. Please check your network and try again. [Error 001]";
            }, 5000); 
        });

        // Load content on page load
        window.onload = loadDynamicContent;
    </script>
